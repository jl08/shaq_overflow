<h1><%= @question.title %></h1>
<p><%= @question.body %></p>

<% @question.answers.each do |answer| %>
  <%= answer.body %>
  <% if logged_in? && answer.user_id == current_user.id %>
    <%= link_to "Edit answer", edit_answer_path(answer) %>
  <% end %>
<% end %>

<div class="spacer"></div>

<%= link_to "add a response", "/responses/new" %>

<h2>Answer:</h2>

<%= render partial: "/answers/form", locals: { answer: @answer } %>

<% if logged_in? && @question.user_id == current_user.id %>
<%= link_to "Edit question", edit_question_path(@question) %>
<%= link_to 'Delete',  @question,  method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
