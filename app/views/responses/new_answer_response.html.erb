<h6>Create a new response</h6>
<%= form_for [@answer,@response], url: {action: "create_answer_response"} do |f| %>
<%= f.hidden_field :respondable_id, value: params[:id] %>
<%= f.hidden_field :respondable_type, value: "Answer" %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <%= f.submit "Post response!" %>
<% end %>
