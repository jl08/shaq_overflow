<header class="header-login-signup">
	<div class="header-limiter">
		<h1><a>SHAQ<span>Overflow</span></a></h1>
		<nav>
			<a><%= link_to "Home", root_path%></a>
			<a><%= link_to "Tags", tags_path, class: :selected %></a>
			<a><%= link_to "Users", users_path %></a>
		</nav>
		<ul>
			<% if logged_in? %>
			  <li><%= link_to "Ask Question", new_question_path %></li>
			  <li><%= link_to "Logout", logout_path, method: :delete, id: "logout-link" %></li>
			<% else %>
			  <li><%= link_to "Login", login_path %></li>
			  <li><%= link_to "Sign Up", new_user_path %></li>
			<% end %>
			</ul>
	</div>
</header>

